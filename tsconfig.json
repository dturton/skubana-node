{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es2017", "es7", "es6", "dom"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "declaration": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "types": ["node", "jest"]
  },
  "exclude": ["dist", "node_modules", "test/**/*", "src/**/*.spec.ts"],
  "include": ["src"]
}
